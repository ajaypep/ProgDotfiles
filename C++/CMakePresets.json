{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "os-agnostic-defaults",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "TRUE",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "DO_TESTS": "TRUE"
      }
    },
    {
      "inherits": [
        "os-agnostic-defaults"
      ],
      "name": "linux-debug",
      "displayName": "Debug Linux",
      "description": "Debug build using Ninja generator for Linux",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true,
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -pedantic -Werror -Wshadow"
      }
    },
    {
      "inherits": [
        "os-agnostic-defaults"
      ],
      "name": "windows-debug",
      "displayName": "Debug Windows",
      "description": "Debug build using Ninja generator for Windows",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/windows-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_CXX_FLAGS_INIT": "/W4 /WX"
      }
    },
    {
      "inherits": [
        "linux-debug"
      ],
      "name": "linux-release",
      "displayName": "Release Linux",
      "description": "Release build using Ninja generator for Linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -pedantic -Werror -Wshadow -O3"
      }
    },
    {
      "inherits": [
        "windows-debug"
      ],
      "name": "windows-release",
      "displayName": "Release Windows",
      "description": "Release build using Ninja generator for Windows",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS_INIT": "/W4 /WX /O2"
      }
    }
  ]
}
